#!/bin/bash

. ~/.bash_colors

txtblk='\e[0;30m' # Black - Regular
txtred='\e[0;31m' # Red
txtgrn='\e[0;32m' # Green
txtylw='\e[0;33m' # Yellow
txtblu='\e[0;34m' # Blue
txtpur='\e[0;35m' # Purple
txtcyn='\e[0;36m' # Cyan
txtwht='\e[0;37m' # White
bldblk='\e[1;30m' # Black - Bold
bldred='\e[1;31m' # Red
bldgrn='\e[1;32m' # Green
bldylw='\e[1;33m' # Yellow
bldblu='\e[1;34m' # Blue
bldpur='\e[1;35m' # Purple
bldcyn='\e[1;36m' # Cyan
bldwht='\e[1;37m' # White
txtrst='\e[0m'    # Text Reset

#template
#echo -e "$bldwht -$txtylw "" $txtred  $txtrst"

echo -e "$bldwht -$txtylw "mount -l" $txtred mount params $txtrst"
echo -e "$bldwht -$txtylw "mount -o remount,rw /path/to/ " $txtred remount /path/to/ rw $txtrst"
echo -e "$bldwht -$txtylw "dd if=/dev/zero of=file1G.tmp bs=1M count=10" $txtred create empty file $txtrst"
echo -e "$bldwht -$txtylw "wget -r -k -l0 -p -E -nc http://site.com/" $txtred wget site $txtrst"
echo -e "$bldwht -$txtylw "tar xvf archive.tar.bz" $txtred extract $txtrst"
echo -e "$bldwht -$txtylw "tar cvf file.tar" $txtred create tar $txtrst"
echo -e "$bldwht -$txtylw "chown -R user:group /path/to/" $txtred chmod recursive $txtrst"
echo -e "$bldwht -$txtylw "serv: nc -u -l -p 40101  cl: nc -u IP 40101" $txtred test ports $txtrst"
echo -e "$bldwht -$txtylw "cat /etc/passwd "|" awk -F ':' '{ print $1 }'" $txtred list users $txtrst"
echo -e "$bldwht -$txtylw "find . -name "*.class" -type f" $txtred find $txtrst"
echo -e "$bldwht -$txtylw "find . -type f -mtime +60 -name "'*.tmp'" -exec ls -l "{}" "\;"" $txtred find by time and exec $txtrst"
echo -e "$bldwht -$txtylw "rsync -avz --progress user@host:/tmp /tmp" $txtred rsync from remote $txtrst"
echo -e "$bldwht -$txtylw "rsync -avz --progress -e ssh user@host:/tmp /tmp" $txtred rsync via ssh $txtrst"

